{
  "name": "backend",
  "version": "1.0.0",
  "description": "fullstack",
  "main": "index.js",
  "scripts": {
    "server": "nodemon index.js",
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "NODE_ENV=test node --test",
    "start-dev": "nodemon --inspect index.js",
    "build:ui": "rm -rf dist && cd ../phonebook-frontend/ && npm run build && cp -r dist ../phonebook-backend",
    "build-ui-win": "powershell Remove-Item -Recurse -Force dist && cd ../phonebook-frontend && npm run build && powershell Copy-Item dist -Recurse ../phonebook-backend",
    "deploy": "fly deploy",
    "deploy:full": "npm run build:ui && npm run deploy",
    "logs:prod": "fly logs",
    "lint": "eslint --fix ."
  },
  "author": "mostafa",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "lodash": "^4.17.21",
    "mongoose": "^8.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^1.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
